.bottombar
    position fixed
    display flex
    bottom 0
    width: 100%
    justify-content space-evenly 
    align-items center
    background-color #F4F4F4
    box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.25);

.bottombar > div
    margin-top 15px
    margin-bottom 15px

.bottombar > div.selected
    border-bottom 5px solid #258039

.bottombar > div > a > img 
    width 35px